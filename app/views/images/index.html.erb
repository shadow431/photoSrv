<h1>Images</h1>

<%= link_to 'Scan for Photos', new_image_path %>
<table>
  <tr>
    <th>Name</th>
    <th>Value</th>
  </tr>

  <% @images.each do |image| %>
    <tr>
      <td><%= image['filename'] %></td>
      <td><%= link_to 'Edit', edit_image_path(image) %></td>
      <td><%= link_to 'Destroy', image_path(image), method: :delete, data: {confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
